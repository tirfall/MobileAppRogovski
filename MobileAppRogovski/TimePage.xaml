<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppRogovski.TimePage">
    <ContentPage.Content>
        <StackLayout>
            <FlexLayout>
                <Label 
                    x:Name="lbl"  
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" 
                    BackgroundColor="Beige"
                    Text="Vajuta siia"
                    TextColor="#47A835"
                    FontSize="Medium">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>
                <Button
                    x:Name="Time_run"
                    Text ="Näita kellaaeg"
                    FontSize="Large"
                    Clicked="timer_btn_Clicked">
                </Button>
            </FlexLayout>
            <Button x:Name="tagasi"
                    Text="Tagasi"
                    FontSize="Large"
                    Clicked="tagasi_clicked">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>